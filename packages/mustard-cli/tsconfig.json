{
  "ts-node": {
    "swc": false,
    "pretty": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "lib": [],
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false,
    "keyofStringsOnly": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "source",
    "paths": {
      "mustard-cli": ["./source/Exports/index.ts"],
      "mustard-cli/decorator": ["./source/Exports/Decorators.ts"],
      "mustard-cli/cli": ["./source/Exports/ComanndLine.ts"],
      "mustard-cli/validator": ["./source/Exports/Validator.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "dist",
    "samples",
    "./source/__tests__",
    "vitest.config.ts",
    "sample.ts"
  ]
}
