{
  "ts-node": {
    "swc": false,
    "pretty": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "lib": [],
    "target": "ES6",
    "module": "ES2022",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "source"
  },
  "include": ["source"],
  "exclude": [
    "dist",
    "samples",
    "source/__tests__",
    "vitest.config.ts",
    "sample.ts"
  ]
}
